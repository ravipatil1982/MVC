
@{
    ViewBag.Title = "Index";
}
@model MVCTraining.Models.BasicViewModel

<h4>Employee</h4>
@using (Html.BeginForm("CreateEmployee", "Basic", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div>
        <div class="row" style="margin:5px">
            <div class="col-sm-2">First Name</div>
            <div class="col-sm-10"><input type="text" style="width:500px" name="FirstName" /></div>
        </div>
        <div class="row" style="margin:5px">
            <div class="col-sm-2">Middle Name</div>
            <div class="col-sm-10"><input type="text" style="width:500px" name="MiddleName" /> </div>
        </div>
        <div class="row" style="margin:5px">
            <div class="col-sm-2">Last Name</div>
            <div class="col-sm-10"><input type="text" style="width:500px" name="LastName" /> </div>
        </div>
        <div class="row" style="margin:5px">
            <div class="col-sm-2">Upload Photo</div>
            <div class="col-sm-10"><input type="file" style="width:500px" name="photo" /> </div>
        </div>
        <div class="row" style="margin:5px">
            <div class="col-sm-2">Address</div>
            <div class="col-sm-10"><input type="text" rows="4" style="width:500px" name="Address" /> </div>
        </div>
        <hr />
        <div>
            <input type="submit" value="Save" />
        </div>

        @if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage != "")
        {
        <div style="background-color:lightgoldenrodyellow">
            @ViewBag.SuccessMessage
        </div>
        }
    </div>
}